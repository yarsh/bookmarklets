(function(){var d=document.createElement('div');var ds=d.style;ds.position='fixed';ds.top=0;ds.right=0;ds.background='#fff';ds.padding='5px';ds.zIndex=999999;ds.display='block';ds.fontSize='12px';ds.fontFamily='sans-serif';d.innerText=window.innerWidth+'x'+window.innerHeight;d.addEventListener('click', function(){ds.display='none';},false);document.body.appendChild(d);window.addEventListener('resize',function(event){ds.display='block';d.innerText=window.innerWidth+'x'+window.innerHeight;});})();
